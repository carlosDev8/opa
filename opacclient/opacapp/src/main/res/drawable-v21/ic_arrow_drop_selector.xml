<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android"
                   android:constantSize="true">
    <item
        android:drawable="@drawable/ic_arrow_drop_up_24dp"
        android:state_activated="true"
        android:id="@+id/up_state"/>
    <item
        android:drawable="@drawable/ic_arrow_drop_down_24dp"
        android:id="@+id/down_state"/>
    <transition
        android:fromId="@+id/down_state"
        android:toId="@+id/up_state"
        android:reversible="true"
        android:drawable="@drawable/ic_arrow_drop_anim"/>
</animated-selector>